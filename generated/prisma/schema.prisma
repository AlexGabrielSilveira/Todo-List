generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Status {
  TODO
  IN_PROGRESS
  DONE
}

model Task {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  status      Status @default(TODO)
}
